<style>
.jumbotron{
	padding-top:0px;
	position: relative;
}

a.glyphicon{
	font-size: 3em;
	padding:20px, 0px;
}
.navbar{
	margin-bottom: 0px;
}
.column-text h2{
 	bottom:0px;
}
.row{
	position: relative;
}
.col-md-2 a{
	padding:0px 10px;
	background-color: transparent;
}
</style>
<p id="notice"><%= notice %></p>
<% video_source_format = "https://www.youtube.com/embed/%s" %>
<% vid_url = video_source_format % @video.youtube_id %>
<div class="container" id="this-container">
	<div class="row">
		<div class="col-md-1">
			<%= link_to '', videos_path, class: "glyphicon glyphicon-backward btn btn-none" %>
		</div>
		<div class="col-md-2">
			<% if current_user.present? %>
				<%= link_to "", {:controller => 'videos', :action => 'upvote_video', :id => params[:id]}, class: "glyphicon glyphicon-thumbs-up btn btn-none "%>
				<%= link_to "", {:controller => 'videos', :action => 'downvote_video', :id => params[:id]}, class: "glyphicon glyphicon-thumbs-down btn btn-none"%>
			<% end %>
		</div>
		<div class="col-md-9">
			<h2 class="cursive" style="vertical-align: center"><%= @video.title%> </h2>
		</div>
	</div>
</div>
<div class="jumbotron" >
	<!-- 4:3 aspect ratio -->
	<div class="embed-responsive embed-responsive-16by9">
	  <iframe class="embed-responsive-item" src='<%= vid_url %>' frameborder="0" allowfullscreen></iframe>
	</div>
</div>
